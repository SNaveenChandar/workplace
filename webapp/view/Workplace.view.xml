<mvc:View
    controllerName="poc.controller.Workplace"
    height="100%"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sfb="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:sv="sap.ui.comp.smartvariants"
    xmlns:mc="sap.suite.ui.microchart"
    xmlns:table="sap.ui.table"
    xmlns:smartVariantManagement="sap.ui.comp.smartvariants"
    xmlns:tnt="sap.tnt"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Button
                    id="sideNavigationToggleButton"
                    icon="sap-icon://menu2"
                    type="Transparent"
                    press=".onSideNavButtonPress"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                 <Title
                    level="H3"
                    text="Welcome {userInfo>/firstname} {userInfo>/lastname}!"
                    wrapping="false"
                    visible="{userInfo>/visible}"
                />
                <ToolbarSeparator />
                <ToolbarSpacer />
                <Image
                    height="4rem"
                    class="sapUiMediumMarginBegin"
                    src="./logo.png"
                />
                <Title
                    level="H1"
                    text="{i18n>renewableWorkplace}"
                    wrapping="false"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="Disappear" />
                    </layoutData>
                </Title>
                <ToolbarSeparator />
                <ToolbarSpacer />
                <Label
                    text="{i18n>adaptFilters}"
                    design="Bold"
                    class="sapUiSmallMarginBottom"
                />
                <SegmentedButton
                    id="idAdaptFilters"
                    selectedKey="{i18n>compact}"
                    selectionChange="onToggleBetweenCompactAndVisualFilters"
                    class="sapUiSmallMarginBottom"
                >
                    <items>
                        <SegmentedButtonItem
                            key="{i18n>compact}"
                            icon="sap-icon://filter-fields"
                        />
                        <SegmentedButtonItem
                            key="{i18n>visual}"
                            icon="sap-icon://filter-analytics"
                        />
                    </items>
                </SegmentedButton>
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation
                id="sideNavigation"
                expanded="false"
                selectedKey="idDebitDynamicPage"
                itemSelect=".onSelect"
            >
                <tnt:NavigationList>
                    <tnt:NavigationListItem
                        text="{i18n>debit}"
                        key="idDebitDynamicPage"
                        icon="sap-icon://arrow-right"
                    />
                    <tnt:NavigationListItem
                        text="{i18n>credit}"
                        icon="sap-icon://arrow-left"
                        key="idMADJDynamicPage"
                    >
                        <tnt:NavigationListItem
                            key="idMADJDynamicPage"
                            text="{i18n>RINMADJ}"
                        /> 
                         <tnt:NavigationListItem
                            key="idRINRFDynamicPage"
                            text="{i18n>RINRF}"
                        />
                        <tnt:NavigationListItem
                            key="idOTCDynamicPage"
                            text="{i18n>RINOTC}"
                        />
                        <tnt:NavigationListItem
                            key="idEMTSDynamicPage"
                            text="{i18n>EMTS}"
                        />
                    </tnt:NavigationListItem>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>

        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="idDebitDynamicPage"
            >
                <pages>
                    <core:Fragment
                        type="XML"
                        fragmentName="poc.fragment.Debit"
                    />
                     <core:Fragment
                        type="XML"
                        fragmentName="poc.fragment.RINManualAdjustment"
                    />
                    <core:Fragment
                        type="XML"
                        fragmentName="poc.fragment.RINRFCredit"
                    />
                    <core:Fragment
                        type="XML"
                        fragmentName="poc.fragment.RINRFOTC"
                    />
                    <core:Fragment
                        type="XML"
                        fragmentName="poc.fragment.EMTS"
                    />
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
